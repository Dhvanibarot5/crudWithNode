<!DOCTYPE html>
<html>
  <head>
    <title>Budget Tracker</title>
    <link rel="stylesheet" href="./style.css" />
  </head>
  <body>
    <h1>Budget Tracker System</h1>
    <div class="container">
      <div class="left-panel">
        <form action="/addBudget" method="POST">
          <h2>Add Budget</h2>
          <input type="number" name="budget" placeholder="Enter budget" required />
          <button type="submit">Add Budget</button>
        </form>

        <form action="/addexp" method="POST">
          <h2>Add Expense</h2>
          <input type="text" name="title" placeholder="Expense Title" required />
          <input type="number" name="amount" placeholder="Amount" required />
          <button type="submit">Add Expense</button>
        </form>

        <form action="/reset" method="POST">
          <button type="submit" style="background-color: red">Reset All</button>
        </form>
      </div>

      <div class="right-panel">
        <div class="stats">
          <p>Total Budget: <%= totalBudget.toFixed(2) %></p>
          <p>Total Expenses: <%= totalExpenses.toFixed(2) %></p>
          <p>Budget Left: <%= budgetLeft.toFixed(2) %></p>
        </div>

        <h3>Expense History:</h3>
        <table>
          <tr>
            <th>Expense Name</th>
            <th>Amount</th>
            <th>Action</th>
          </tr>
          <% expenses.forEach(expense => { %>
          <tr>
            <td><%= expense.title %></td>
            <td><%= expense.amount.toFixed(2) %></td>
            <td>
              <form action="/deleteexp/<%= expense._id %>" method="POST">
                <button type="submit">Delete</button>
              </form>
            </td>
          </tr>
          <% }) %>
        </table>
      </div>
    </div>
  </body>
</html>
